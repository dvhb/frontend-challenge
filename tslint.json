{
  "extends": ["tslint-config-airbnb", "tslint-config-prettier", "tslint-plugin-prettier"],
  "rulesDirectory": ["node_modules/tslint-react/rules"],
  "rules": {
    "jsx-no-lambda": true,
    "jsx-use-translation-function": false,
    "import-name": false,
    "max-line-length": [true, 140],
    "no-console": [true, "log"],
    "object-shorthand-properties-first": false,
    "prefer-array-literal": false,
    "prettier": true,
    "variable-name": [true, "check-format", "allow-pascal-case", "allow-leading-underscore"]
  },
  "linterOptions": {
    "exclude": ["node_modules/**", "**/*.stories.tsx", "**/storybook/**"]
  }
}
